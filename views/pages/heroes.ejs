<html>

<head>
    <title>
        <%- Title %>
    </title>
    <% include ../partials/head %>
</head>

<body>
    <div>
        <% include ../partials/navigation %>
    </div>
    <div class="container main-content">
        <% include ../partials/top-ads %>
        <section>
            <h3>Hero list:</h3>
            <blockquote>
                <p>Base on 6* and level 30 heroes </p>
            </blockquote>
            <div class="row">
                <% Heroes.forEach(function(hero){ %>
                    <a href="/hero?name=<%= hero.H_Name %>">
                        <div class="col-md-2 col-sm-2 heroes-panel">
                            <img src="<%= hero.H_Image.url %>" class="img-thumbnail">
                            <div class="bs-example text-center">
                                <img src="../src/img/type/<%= hero.H_Type %>.png" class="element-type">
                                <span><%= hero.H_Name %></span>
                            </div>
                        </div>
                    </a>
                <% }); %>
            </div>
        </section>
    </div>
    <div>
        <% include ../partials/footer %>
    </div>
</body>

</html>
